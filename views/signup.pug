extends base

block  content
    main.main
    .login-form
        h2.heading-secondary.ma-bt-lg Sign Up a new account
        form.form
            .form__group
                label.form__label(for='s-name') User Name
                input#s-name.form__input(type='text', placeholder='you@example.com', required)
            .form__group
                label.form__label(for='s-email') Email address
                input#s-email.form__input(type='email', placeholder='you@example.com', required)
            .form__group.ma-bt-md
                label.form__label(for='s-password') Password
                input#s-password.form__input(type='password', placeholder='••••••••', required, minlength='8')
            .form__group.ma-bt-md
                label.form__label(for='s-confirm-password') Confirm Password
                input#s-confirm-password.form__input(type='password', placeholder='••••••••', required, minlength='8')
            .form__group
                button#signup.btn.btn--green Sign Up